<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <h1><%= @seccion.nombre %> - Paginas</h1>
      </div>

      <%= link_to "Nueva Pagina", new_admin_seccion_pagina_path(@seccion), :title => 'Create new Seccion', :class => 'btn btn-default' %>

      <%= content_tag(:table, :class => 'index_table', id: 'paginas') do %>
      <thead>
        <tr>
          <th>&nbsp;</th>
          <th>Nombre</th>
          <th>Activa</th>
        </tr>
      </thead>
      <tbody>
        <% @paginas.each do |pagina| %>
        <%= content_tag_for(:tr, pagina) do %>
        <td><i class="icon-resize-vertical sort-handle"></i></td>
        <td><%= pagina.nombre %></td>
        <td><%= pagina.active %></td>
        <td><%= link_to 'Edit', edit_admin_seccion_pagina_path(@seccion, pagina), title: 'Edit Pagina' %></td>
        <td><%= link_to 'Delete', admin_seccion_pagina_path(@seccion, pagina), method: :delete, data: {confirm: 'Are you sure?'}, title: 'Delete Pagina' %></td>
        <% end %>
        <% end %>
      </tbody>
      <% end %>
    </div>
  </div>
</div>
